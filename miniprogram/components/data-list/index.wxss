/**index.wxss**/
.repo-card {
  background: var(--color-white);
  margin: 12rpx 0;
  padding: 8rpx;
  padding-left: 20rpx;
  padding-right: 32rpx;
}

.repo-icon {
  height: 96rpx;
  width: 96rpx;
  float: left;
  margin: 12rpx;
  border-radius: 50%;
  border: 1px solid var(--background-color-base)
}

.repo-name {
  font-size: var(--font-size-large);
  line-height: 1.6em;
}

.repo-time {
  font-size: var(--font-size-mini);
  color: #bbb;
}

.repo-description {
  clear: right;
  font-size: var(--font-size-regular);
  color: #999;
  overflow: hidden;
  max-height: 2.8em;
  line-height: 1.4em;
  margin: 8rpx 0;
}

.repo-footer {
  display: flex;
  align-items: flex-end;
}

.repo-meta {
  flex: 1;
  text-align: right;
  font-size: var(--font-size-small);
  color: var(--color-primary);
}

.repo-meta .repo-meta-icon {
  margin-left: 8rpx;
}

.repo-language {
  flex: 1;
  color: var(--color-black);
  font-size: var(--font-size-small);
}

.repo-language-icon {
  display: inline-block;
  margin: 0 4rpx;
  width: 1em;
  height: 1em;
  border-radius: 50%;
  background-color: var(--background-color-base)
}

