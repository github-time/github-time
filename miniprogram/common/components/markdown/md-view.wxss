@import '../code-highlight/index.wxss';

.emoji {
  width:1em;
  height:1em;
}

.markdown-body-img {
  box-sizing: content-box;
  max-width: 100%;
  border-style: none;
  background-color: #fff;
}

.markdown-body-img[align=right] {
  padding-left: 20px;
}

.markdown-body-img[align=left] {
  padding-right: 20px;
}

.markdown-body-block-code {
  padding: 10px;
  margin: 10px 0;
  background-color: #2d2d2d;
  color:#ccc;
  white-space:pre;
  overflow:scroll;
}

.markdown-body-a {
  color: #0366d6;
  text-decoration: none;
  background-color: transparent;
  margin: 0 2rpx;
}

