.markdown-body-hr {
  box-sizing: content-box;
  overflow: hidden;
  background: transparent;
  border: 0;
  border-bottom: 1px solid #eee;
  height: 0.25em;
  padding: 0;
  margin: 24px 0;
}

.markdown-body-hr::before {
  display: table;
  content: "";
}

.markdown-body-hr::after {
  display: table;
  clear: both;
  content: "";
}

.markdown-body-table {
  border-spacing: 0;
  border-collapse: collapse;
}

.markdown-body-h1,
.markdown-body-h2,
.markdown-body-h3,
.markdown-body-h4,
.markdown-body-h5,
.markdown-body-h6 {
  margin-top: 24px;
  margin-bottom: 16px;
  font-weight: 600;
  line-height: 1.25;
}

.markdown-body-h1 {
  font-size: 2em;
  font-weight: 600;
  padding-bottom: 0.3em;
  border-bottom: 1px solid #eaecef;
}

.markdown-body-h2 {
  font-size: 1.5em;
  font-weight: 600;
  padding-bottom: 0.3em;
  border-bottom: 1px solid #eaecef;
}

.markdown-body-h3 {
  font-size: 1.25em;
  font-size: 20px;
}

.markdown-body-h4 {
  font-size: 1em;
  font-weight: 600;
}

.markdown-body-h5 {
  font-size: 0.875em;
  font-weight: 600;
}

.markdown-body-h6 {
  font-size: 12px;
  font-weight: 600;
  font-size: 0.85em;
  color: #6a737d;
}

.markdown-body-p {
  margin-top: 0;
  margin-bottom: 10px;
}

.markdown-body-dd {
  margin-left: 0;
}

.markdown-body-pre {
  margin-top: 0;
  margin-bottom: 0;
  font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, Courier, monospace;
  font-size: 12px;
}

.markdown-body-blockquote {
  margin: 0;
  padding: 0 1em;
  color: #6a737d;
  border-left: 0.25em solid #dfe2e5;
}

.markdown-body-kbd {
  display: inline-block;
  padding: 3px 5px;
  font-size: 11px;
  line-height: 10px;
  color: #444d56;
  vertical-align: middle;
  background-color: #fafbfc;
  border: solid 1px #c6cbd1;
  border-bottom-color: #959da5;
  border-radius: 3px;
  box-shadow: inset 0 -1px 0 #959da5;
}

.markdown-body-dl {
  padding: 0;
}

.markdown-body-dl .markdown-body-dt {
  padding: 0;
  margin-top: 16px;
  font-size: 1em;
  font-style: italic;
  font-weight: 600;
}

.markdown-body-dl .markdown-body-dd {
  padding: 0 16px;
  margin-bottom: 16px;
}

.markdown-body-table {
  display: block;
  width: 100%;
  overflow: auto;
}

.markdown-body-table .markdown-body-th {
  font-weight: 600;
}

.markdown-body-table .markdown-body-th,
.markdown-body-table .markdown-body-td {
  padding: 6px 13px;
  border: 1px solid #dfe2e5;
}

.markdown-body-table .markdown-body-tr {
  background-color: #fff;
  border-top: 1px solid #c6cbd1;
}

.markdown-body-table .markdown-body-tr:nth-child(2n) {
  background-color: #f6f8fa;
}

.markdown-container {
  padding: 8rpx 20rpx;
}

.markdown-body-paragraph {
  margin-top: 0.6em;
  margin-bottom: 0.6em;
}

.image-in-table {
  max-width: 420rpx;
  max-height: 420rpx;
}

.markdown-container-preview {
  background: white;
}

.markdown-container-code {
  background: #2d2d2d;
}
