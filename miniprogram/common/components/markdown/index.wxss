@import '../code-highlight/index.wxss';

.markdown-body-p,
.markdown-body-blockquote,
.markdown-body-dl,
.markdown-body-table,
.markdown-body-pre {
  margin-top: 0;
  margin-bottom: 16px;
}

.markdown-body-td,
.markdown-body-th {
  padding: 0;
}

.markdown-body {
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  line-height: 1.5;
  color: #24292e;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  font-size: 16px;
  word-wrap: break-word;
}

.markdown-body-strong {
  font-weight: 600;
}

.markdown-body-block-code {
  padding: 10px;
  margin: 10px 0;
  background-color: #2d2d2d;
  color:#ccc;
  white-space:pre;
  overflow:scroll;
}

.markdown-body-input {
  font: inherit;
  margin: 0;
}

