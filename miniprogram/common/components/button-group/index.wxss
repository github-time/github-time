.button-group {
  color: white;
  box-sizing: border-box;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}

.button-group-item {
  display: inline-block;
  text-align: center;
  margin: 6rpx 6rpx;
  padding: 0 12rpx;
  border-radius: 12rpx;
  min-width: 80rpx;
  background: #ccc;
}

.button-group-item.active {
  background: #3cc51f;
}

.button-group-clear {
  display: inline-block;
  padding: 0 12rpx;
}
