.simple-tab-bar {
  color: #7A7E83;
  display: flex;
  box-sizing: border-box;
  height: 1.5em;
  border-bottom: 1px solid rgba(0, 0, 0, 0.33);
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}

.simple-tab-bar-item {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 0 8rpx;
  border-bottom: 4rpx solid rgba(0, 0, 0, 0);
}

.simple-tab-bar-item.active {
  color: #3cc51f;
  border-bottom: 4rpx solid #3cc51f;
}
