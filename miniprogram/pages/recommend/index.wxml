<!--index.wxml-->
<mp-navigation-bar
  ext-class="my-navigation-bar"
  title="Github Time"
  back="{{false}}"
  >
</mp-navigation-bar>

<mp-simple-tab-bar
  ext-class="top-simple-tab-bar"
  list="{{list}}"
  bindchange="tabChange">
</mp-simple-tab-bar>

<mp-fill-view>
  <mp-repo-list
    hidden="{{currentTab !== list[0].name}}"
    repo-list="{{repoList}}"
    bindscrolltolower="lower"
    >
  </mp-repo-list>

  <view hidden="{{ currentTab !== list[1].name }}">
  开发者
  </view>
</mp-fill-view>
